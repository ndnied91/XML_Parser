<business default-business-unit-id="19001074" ada-compliant="true">
<business-rule active="true" id="2342" name="UPS-C-VA3PLC-Care_VA-O-P-Billing_Center_Portal_Support-DT-ENG-PageLanding_T0" ignore-funnel-level="true">
  <q-threshold>999.0</q-threshold>
  <condition>
    <when>
      <event event-type="onPageLanding"/>
    </when>
    <and>
      <string-compare test="contains" ignore-case="true">
        <as-string>
          <js-string-ref js-var-id="utag_data.page_id"/>
        </as-string>
        <string>billing-center/sri/support.page</string>
      </string-compare>
      <string-compare test="contains" ignore-case="true">
        <as-string>
          <js-string-ref js-var-id="utag_data.page_country_code"/>
        </as-string>
        <string>US</string>
      </string-compare>
      <string-compare test="contains" ignore-case="true">
        <as-string>
          <js-string-ref js-var-id="utag_data.page_language"/>
        </as-string>
        <string>en</string>
      </string-compare>
      <not>
        <is-device-type type="Phone"/>
      </not>
    </and>
  </condition>
  <actions>
    <set-string-var var-id="InvocationPoint">
      <string>InvPt_BillingCenter</string>
    </set-string-var>
    <map-set>
      <map-variable-ref var-id="automatonDatapass"/>
      <key>
        <string>LiveChatEligible</string>
      </key>
      <value>
        <true/>
      </value>
    </map-set>
    <show-proactive>
      <chat-spec>
        <chat-spec-id>
          <number>29001654</number>
        </chat-spec-id>
        <check-agent-availability>false</check-agent-availability>
        <ignore-hop>true</ignore-hop>
        <automaton-id>
          <string-variable-ref var-id="VA-SpecID"/>
        </automaton-id>
        <opener-id>
          <number-variable-ref var-id="UPS-VA-AO-ENG"/>
        </opener-id>
        <chat-theme>
          <chat-theme-id>
            <number-variable-ref var-id="phaseII-div-chatThemeID"/>
          </chat-theme-id>
          <position type="STATIC">
            <static-position>
              <string>CENTER</string>
            </static-position>
          </position>
        </chat-theme>
        <embedded-theme>
          <parent-div-id>
            <string>embeddedchat</string>
          </parent-div-id>
          <chat-theme>
            <chat-theme-id>
              <number-variable-ref var-id="phaseII-emb-chatThemeID"/>
            </chat-theme-id>
          </chat-theme>
        </embedded-theme>
      </chat-spec>
    </show-proactive>
    <fire-custom-event event="invoRefresh"/>
  </actions>
</business-rule>
